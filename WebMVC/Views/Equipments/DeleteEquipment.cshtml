@model BLL.DTOs.EquipmentWithUnitIdDTO

@{
    ViewData["Title"] = "Delete Equipment";
}

<h1>Delete Equipment</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Equipment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EquipmentDTO.Type)
        </dd>
    </dl>
    
    <form asp-action="DeleteEquipment">
        <input type="hidden" name="equipmentId" asp-for="@Model.EquipmentDTO.Id" />
        <input type="hidden" name="unitId" asp-for="@Model.UnitId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="javascript: history.go(-1)" class="btn btn-primary">Cancel</a>
    </form>
</div>
