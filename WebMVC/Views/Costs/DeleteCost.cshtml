@model BLL.DTOs.CostDTO

@{
    ViewData["Title"] = "Delete Cost";
}

<h1>Delete Cost</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label class="control-label">Name</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <label class="control-label">Price</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            <label class="control-label">Cost Type</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CostType)
        </dd>
        <dt class = "col-sm-2">
            <label class="control-label">Date</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="DeleteCost">
        <input type="hidden" name="costId" asp-for="Id" />
        <input type="hidden" name="unitId" asp-for="UnitId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="javascript: history.go(-1)" class="btn btn-primary">Cancel</a>
    </form>
</div>
