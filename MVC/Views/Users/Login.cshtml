@model BLL.DTOs.UserLoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>
<br />

@using (Html.BeginForm("Login", "Users"))
{
    @Html.AntiForgeryToken()

    <p class="text-warning align-content-lg-center">@Html.ValidationSummary(false, "")</p>

    <!-- Center Form -->
    <div class="col-md-5">
        <div class="form-group">
            <label for=emailInput>Email</label>
            @Html.TextBoxFor(m => m.Email, new
            {
                @class = "form-control",
                @placeholder = "Login *",
                @id = "emailInput",
                @required = true
            })
        </div>

        <div class="form-group">
            <label for="">Password</label>
            @Html.TextBoxFor(m => m.Password, new
            {
                @class = "form-control",
                @placeholder = "Password",
                @type = "password",
                @required = true
            })
        </div>

        <button type="submit" class="btn btn-primary col-md-3">Log In</button>
    </div>
}
