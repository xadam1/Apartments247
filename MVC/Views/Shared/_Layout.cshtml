<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - A247</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-Journal.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark" style="margin:0 0 24px;">
            <!-- navbar navbar-dark bg-dark -->
            <div class="container">

                <!-- Logo -->
                <a class="navbar-brand text-light" asp-area="" asp-controller="Delta" asp-action="Overview">A247</a>

                <!-- Links -->
                <div class="navbar-collapse">
                    <ul class="navbar-nav mr-auto font-weight-lighter">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Delta" asp-action="ListGroups">
                                ListGroups
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Delta" asp-action="ListUnits">
                                ListUnits
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Delta" asp-action="NewGroup">
                                NewGroup
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Delta" asp-action="EditGroup">GroupDetails</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ml-auto" style="padding-left: 15px">
                        <li class="nav-item">
                            <a class="nav-link text-dark rounded btn-success" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark rounded btn-warning" asp-area="" asp-controller="Users" asp-action="Register">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
