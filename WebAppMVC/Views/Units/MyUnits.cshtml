@using Castle.Core.Logging
@using Microsoft.Extensions.Logging
@model BLL.DTOs.UnitsOverviewDTO

@{
    ViewData["Title"] = "Show Units";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (!Model.Groups.Any())
{
    <p>You don't have any UnitGroups.</p>
    <hr />

    <button class="btn btn-warning" asp-controller="Groups" asp-action="EditGroup">Create New UnitGroup</button>
}
else
{
    <label>Choose UnitGroup</label>
    <select id="selectGroupList" class="custom-select custom-select-lg mb-3" onchange="changeGroup()">
        @foreach (var group in Model.Groups)
        {
            <option id="@group.Id" value="@group.Id">@group.Name</option>
        }
    </select>

    <br />
    <hr />
    <br />

    <script>
        function changeGroup() {
            console.log('changeGroup() called');
            var newGroupId = document.getElementById('selectGroupList').value;
            location.href = '/Units/MyUnits?unitGroupID=' + newGroupId;
        }
    </script>

    @if (!Model.UnitsInGroup.Any())
    {
        <p>This UnitGroup is empty.</p>
        <hr />

        <button class="btn btn-warning" asp-controller="Units" asp-action="CreateUnit">Create New Unit</button>
    }
