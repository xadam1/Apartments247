@model ListOfGroupsAndUnitsModel

@{
    ViewData["Title"] = "Show Units";
    var groups = Model.Groups;
    var units = Model.Units;
}
@if (groups.Length == 0)
{
    <p>You don't have any UnitGroups.</p><br />
    <p>Let's <a href="/Delta/EditGroup/-1">create</a> one.</p>
}
else
{
    @*Výběr pro přepínání mezi skupinami jednotek*@
    <label>Choose UnitGroup</label>
    <select>
        @foreach (var group in groups)
        {
            <option value="@group.Id">@group.Specification.Name</option>
        }
    </select>

    @if (units.Length == 0)
    {
        <p>This UnitGroup is empty.</p><br />
        <p>Let's <a href="/Delta/EditUnit/-1">create</a> new Unit in this group.</p>
    }
    <table>
        <tr>
            <th>Name</th>
            <th>Color</th>
            <th>Note</th>
            <th>CurrentCapacity</th>
            <th>MaxCapacity</th>
            <th>UnitType</th>
            <th>ContractLink</th>
        </tr>
        @foreach (var unit in units)
        {
            <tr>
                <td>@unit.Specification.Name</td>
                <td>@unit.Specification.Color</td>
                <td>@unit.Specification.Note</td>
                <td>@unit.CurrentCapacity</td>
                <td>@unit.MaxCapacity</td>
                <td>@unit.UnitType.Type</td>
                <td>@unit.ContractLink</td>
            </tr>
        }
    </table>
}
